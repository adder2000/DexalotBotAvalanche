{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "ES2020", "dom"
      ],
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "types": [
        "node"
      ],
      "allowJs": false,
      "strict": false,
      "strictPropertyInitialization": false,
      "alwaysStrict": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts",
      "config/*.js",
    ],
    "exclude": [
      "node_modules/**/*"
    ]
  }
  